<!Doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>追加ページ</title>
  <style>
  body {
    font-family:serif;
  </style>
</head>
<body>
  <h2>追加ページ</h2>
  <form action="/insert">
    <label for="drink">商品名：</label>
    <input type="text" name="drink" id="drink">
    <br>
    <label for="pop">金額（円）：</label>
    <input type="number" name="pop" id="pop" min="50" step="10">
    <option value=""></option>
    <form method="post">
	    <div>
		    <label for="com">会社名：</label>
		    <select name="cid">
		      <option value="">選択してください</option>
          <% for( let row of data ) { %>
          <option value="<%= row.id %>"><%= row.name %></option>
          <% } %>
		    </select>
	    </div>
      <br>
      <input type="submit" value="追加">
      <br>
      <a href="/top">一覧へ戻る</a><br>
    </form>
</body>
</html>
